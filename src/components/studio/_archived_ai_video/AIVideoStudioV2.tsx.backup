import { useState, useEffect } from 'react';
import { Video, Loader2, Play, Clock, CheckCircle, XCircle, Sparkles, RefreshCw, Film } from 'lucide-react';
import { supabase } from '../../lib/supabase';
import { useAuth } from '../../contexts/AuthContext';
import { PromptMaker } from './PromptMaker';
import { VideoEditor } from './VideoEditor';
import { ALLOWED_DURATIONS } from '../../lib/videoChunkPlan';

type VideoGeneration = {
  id: string;
  user_id: string;
  title: string | null;
  prompt: string;
  model: string;
  is_pro: boolean;
  seconds: number;
  target_seconds?: number | null;
  total_seconds?: number | null;
  segments_json?: any[];
  stitch_status?: string;
  size: string;
  status: string;
  openai_job_id: string | null;
  progress: number | null;
  output_video_url: string | null;
  thumbnail_url: string | null;
  error_message: string | null;
  created_at: string;
  updated_at: string;
};

const STORAGE_KEY = 'ghoste.current_video_id';
const FALLBACK_KEY = 'ghoste.pending_video_project';

export function AIVideoStudioV2() {
  const { user } = useAuth();

  // UI State
  const [activeTab, setActiveTab] = useState<'create' | 'current' | 'recent' | 'editor'>('create');
  const [showPromptMaker, setShowPromptMaker] = useState(false);

  // Video state
  const [currentVideo, setCurrentVideo] = useState<VideoGeneration | null>(null);
  const [recentVideos, setRecentVideos] = useState<VideoGeneration[]>([]);
  const [selectedVideoForEditor, setSelectedVideoForEditor] = useState<VideoGeneration | null>(null);

  // Form state
  const [prompt, setPrompt] = useState('');
  const [promptParts, setPromptParts] = useState<any>(null);
  const [title, setTitle] = useState('');
  const [isPro, setIsPro] = useState(false);
  const [seconds, setSeconds] = useState(8);
  const [orientation, setOrientation] = useState('vertical');
  const [showLyrics, setShowLyrics] = useState(false);
  const [audioUrl, setAudioUrl] = useState('');

  // Loading/error state
  const [creating, setCreating] = useState(false);
  const [error, setError] = useState<string | null>(null);
  const [pollingInterval, setPollingInterval] = useState<NodeJS.Timeout | null>(null);

  useEffect(() => {
    if (user) {
      loadRecentVideos();
      loadCurrentVideoFromStorage();

      // Check for pending fallback jobs on mount
      const fallbackData = localStorage.getItem(FALLBACK_KEY);
      if (fallbackData) {
        try {
          const parsed = JSON.parse(fallbackData);
          console.log('[AIVideoStudio] Found pending fallback job on mount, syncing...');
          syncFallbackJob(parsed);
        } catch (err) {
          console.error('[AIVideoStudio] Failed to parse fallback data on mount');
          localStorage.removeItem(FALLBACK_KEY);
        }
      }
    }

    return () => {
      if (pollingInterval) clearInterval(pollingInterval);
    };
  }, [user]);

  useEffect(() => {
    // Update URL with current video ID
    if (currentVideo) {
      const url = new URL(window.location.href);
      url.searchParams.set('video_id', currentVideo.id);
      window.history.replaceState({}, '', url.toString());
    }
  }, [currentVideo]);

  const loadCurrentVideoFromStorage = async () => {
    try {
      // Check URL first
      const url = new URL(window.location.href);
      let videoId = url.searchParams.get('video_id');

      // Fallback to localStorage
      if (!videoId) {
        videoId = localStorage.getItem(STORAGE_KEY);
      }

      if (videoId) {
        await loadVideoById(videoId);
      }
    } catch (err) {
      console.error('[AIVideoStudio] Load current video error:', err);
    }
  };

  const loadVideoById = async (videoId: string) => {
    try {
      const { data: { session } } = await supabase.auth.getSession();
      if (!session) return;

      const { data: videoData } = await supabase
        .from('video_generations')
        .select('stitch_status')
        .eq('id', videoId)
        .single();

      const isMultiSegment = videoData?.stitch_status && videoData.stitch_status !== 'single';
      const endpoint = isMultiSegment
        ? '/.netlify/functions/sora-video-runner'
        : `/.netlify/functions/sora-video-status?video_id=${videoId}`;

      const response = await fetch(endpoint, {
        method: isMultiSegment ? 'POST' : 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${session.access_token}`,
        },
        body: isMultiSegment ? JSON.stringify({ video_id: videoId }) : undefined,
      });

      if (!response.ok) {
        console.error('[AIVideoStudio] Failed to load video:', await response.text());
        return;
      }

      const data = await response.json();
      const video: VideoGeneration = {
        id: data.video_id,
        user_id: user?.id || '',
        title: data.title || null,
        prompt: data.prompt,
        model: data.model,
        is_pro: data.is_pro || false,
        seconds: data.seconds,
        size: data.size,
        status: data.status,
        openai_job_id: data.openai_job_id || null,
        progress: data.progress || null,
        output_video_url: data.output_url || null,
        thumbnail_url: data.thumbnail_url || null,
        error_message: data.error_message || null,
        created_at: data.created_at,
        updated_at: data.updated_at,
      };

      setCurrentVideo(video);
      localStorage.setItem(STORAGE_KEY, videoId);

      // If video is already completed/failed, don't set as current
      if (video.status === 'completed' || video.status === 'failed') {
        console.log('[AIVideoStudio] Video already terminal, not setting as current');
        loadRecentVideos();
        return;
      }

      // Start polling if not terminal
      if (video.status !== 'completed' && video.status !== 'failed') {
        startPolling(videoId);
      }
    } catch (err) {
      console.error('[AIVideoStudio] Load video error:', err);
    }
  };

  const loadRecentVideos = async () => {
    try {
      const { data, error } = await supabase
        .from('video_generations')
        .select('*')
        .eq('user_id', user?.id)
        .in('status', ['completed', 'failed']) // Show completed and failed videos
        .order('created_at', { ascending: false })
        .limit(10);

      if (error) throw error;

      console.log('[AIVideoStudio] Loaded recent videos:', data?.length || 0);
      setRecentVideos(data || []);
    } catch (err) {
      console.error('[AIVideoStudio] Load recent videos error:', err);
    }
  };

  const startPolling = (videoId: string, startTime: number = Date.now()) => {
    if (pollingInterval) clearInterval(pollingInterval);

    const MAX_POLL_DURATION = 10 * 60 * 1000; // 10 minutes
    let pollCount = 0;

    const interval = setInterval(async () => {
      try {
        pollCount++;
        const elapsed = Date.now() - startTime;

        // Stop polling after 10 minutes
        if (elapsed > MAX_POLL_DURATION) {
          console.log('[AIVideoStudio] Polling timeout reached');
          clearInterval(interval);
          setPollingInterval(null);
          setError('Video is still processing. Click Refresh to check status.');
          return;
        }

        const { data: { session } } = await supabase.auth.getSession();
        if (!session) return;

        console.log(`[AIVideoStudio] Polling video ${videoId} (attempt ${pollCount})`);

        const response = await fetch(`/.netlify/functions/sora-video-status?video_id=${videoId}`, {
          headers: { 'Authorization': `Bearer ${session.access_token}` },
        });

        if (!response.ok) {
          console.warn('[AIVideoStudio] Polling request failed:', response.status);
          return;
        }

        const data = await response.json();

        console.log('[AIVideoStudio] Polling result:', {
          status: data.status,
          hasUrl: !!data.output_url,
          progress: data.progress,
        });

        setCurrentVideo(prev => {
          if (!prev || prev.id !== videoId) return prev;

          return {
            ...prev,
            status: data.status,
            output_video_url: data.output_url || prev.output_video_url,
            thumbnail_url: data.thumbnail_url || prev.thumbnail_url,
            progress: data.progress || prev.progress,
            error_message: data.error_message || prev.error_message,
            updated_at: data.updated_at,
          };
        });

        // Stop polling if terminal and move to Recent
        if (data.status === 'completed' || data.status === 'failed') {
          console.log('[AIVideoStudio] Video reached terminal state:', data.status);
          clearInterval(interval);
          setPollingInterval(null);

          // Clear current video and reload recent
          setCurrentVideo(null);
          localStorage.removeItem(STORAGE_KEY);
          loadRecentVideos();

          // Switch to recent tab to show completed video
          setActiveTab('recent');
        }
      } catch (err) {
        console.error('[AIVideoStudio] Polling error:', err);
      }
    }, 6000);

    setPollingInterval(interval);
  };

  const syncFallbackJob = async (fallbackData: any) => {
    try {
      const { data: { session } } = await supabase.auth.getSession();
      if (!session) {
        console.error('[AIVideoStudio] No session for fallback sync');
        return;
      }

      const jobId = fallbackData.openai_job_id || fallbackData.firstJobId;
      if (!jobId) {
        console.error('[AIVideoStudio] No job ID in fallback data');
        return;
      }

      const syncPayload = {
        openai_job_id: jobId,
        prompt: fallbackData.prompt || prompt,
        model: fallbackData.model || 'sora-2',
        seconds: fallbackData.seconds || seconds,
        size: fallbackData.size || '720x1280',
        title: title || null,
        isPro: fallbackData.isPro || isPro,
        targetSeconds: fallbackData.targetSeconds,
      };

      console.log('[AIVideoStudio] Syncing fallback job:', syncPayload);

      const response = await fetch('/.netlify/functions/sora-sync-fallback', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${session.access_token}`,
        },
        body: JSON.stringify(syncPayload),
      });

      if (!response.ok) {
        const errorData = await response.json();
        console.error('[AIVideoStudio] Fallback sync failed:', errorData);
        setError(`Sync failed: ${errorData.message || 'Unknown error'}. Will retry...`);
        return;
      }

      const data = await response.json();
      console.log('[AIVideoStudio] Fallback sync successful:', data);

      // Clear fallback data
      localStorage.removeItem(FALLBACK_KEY);

      // Load the synced video
      if (data.video_id) {
        await loadVideoById(data.video_id);
        setError(null);
      }
    } catch (err: any) {
      console.error('[AIVideoStudio] Fallback sync error:', err);
      setError('Syncing video... Will retry automatically.');
    }
  };

  const handleUsePrompt = (generatedPrompt: string, parts: any) => {
    setPrompt(generatedPrompt);
    setPromptParts(parts);
    setSeconds(parts.seconds);
    setOrientation(parts.orientation);
    setShowPromptMaker(false);
  };

  const handleCreate = async () => {
    if (!prompt.trim()) {
      setError('Please enter a prompt or use the Prompt Maker');
      return;
    }

    setCreating(true);
    setError(null);

    try {
      const { data: { session } } = await supabase.auth.getSession();
      if (!session) {
        setError('Please log in to create videos');
        return;
      }

      const sizeMap: Record<string, string> = {
        vertical: '720x1280',
        horizontal: '1280x720',
        square: '1024x1024',
      };

      const isMultiSegment = seconds > 12;

      const body = {
        title: title || null,
        prompt,
        promptParts: promptParts || undefined,
        isPro,
        seconds: isMultiSegment ? 12 : seconds,
        targetSeconds: isMultiSegment ? seconds : undefined,
        size: sizeMap[orientation] || '720x1280',
        showLyrics,
        audioUrl: audioUrl || null,
      };

      console.log('[AIVideoStudio] Creating video:', body);

      const response = await fetch('/.netlify/functions/sora-video-create', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${session.access_token}`,
        },
        body: JSON.stringify(body),
      });

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.message || 'Failed to create video');
      }

      const result = await response.json();

      console.log('[AIVideoStudio] Create result:', result);

      if (!result.success) {
        throw new Error(result.message || 'Video creation failed');
      }

      // Handle fallback modes
      if (result.mode === 'multi_local_fallback' || result.mode === 'single_local_fallback') {
        console.log('[AIVideoStudio] Fallback mode active:', result.mode, result);
        const pendingData = result.pendingPlan || result.pendingJob;
        localStorage.setItem(FALLBACK_KEY, JSON.stringify(pendingData));

        // Try to sync fallback job immediately
        if (pendingData.openai_job_id || pendingData.firstJobId) {
          console.log('[AIVideoStudio] Attempting fallback sync...');
          await syncFallbackJob(pendingData);
        } else {
          console.warn('[AIVideoStudio] No job ID in fallback data');
          setError('Video generation started but sync failed. Refresh to check status.');
        }
      }

      // Load the new video and start polling
      if (result.video_id) {
        await loadVideoById(result.video_id);
      }

      // Switch to current video tab
      setActiveTab('current');

      // Reset form
      setPrompt('');
      setTitle('');
      setPromptParts(null);
    } catch (err: any) {
      console.error('[AIVideoStudio] Create video error:', err);
      setError(err.message || 'Failed to create video');
    } finally {
      setCreating(false);
    }
  };

  const handleRefreshStatus = async () => {
    if (!currentVideo) {
      // Check if there's a pending fallback job
      const fallbackData = localStorage.getItem(FALLBACK_KEY);
      if (fallbackData) {
        try {
          const parsed = JSON.parse(fallbackData);
          console.log('[AIVideoStudio] Retrying fallback sync on refresh');
          await syncFallbackJob(parsed);
        } catch (err) {
          console.error('[AIVideoStudio] Failed to parse fallback data');
          localStorage.removeItem(FALLBACK_KEY);
        }
      }
      return;
    }
    await loadVideoById(currentVideo.id);
  };

  const renderStatusBadge = (status: string) => {
    switch (status) {
      case 'queued':
        return (
          <span className="inline-flex items-center gap-1 px-2 py-1 bg-yellow-900 text-yellow-200 text-xs rounded">
            <Clock className="w-3 h-3" />
            Queued
          </span>
        );
      case 'processing':
        return (
          <span className="inline-flex items-center gap-1 px-2 py-1 bg-blue-900 text-blue-200 text-xs rounded">
            <Loader2 className="w-3 h-3 animate-spin" />
            Processing
          </span>
        );
      case 'completed':
        return (
          <span className="inline-flex items-center gap-1 px-2 py-1 bg-green-900 text-green-200 text-xs rounded">
            <CheckCircle className="w-3 h-3" />
            Completed
          </span>
        );
      case 'failed':
        return (
          <span className="inline-flex items-center gap-1 px-2 py-1 bg-red-900 text-red-200 text-xs rounded">
            <XCircle className="w-3 h-3" />
            Failed
          </span>
        );
      default:
        return (
          <span className="px-2 py-1 bg-gray-700 text-gray-300 text-xs rounded">
            {status}
          </span>
        );
    }
  };

  return (
    <div className="max-w-7xl mx-auto p-6 space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-3xl font-bold text-white flex items-center gap-3">
            <Video className="w-8 h-8 text-blue-400" />
            AI Video Studio
          </h1>
          <p className="text-gray-400 mt-1">Create professional music marketing videos with Sora</p>
        </div>
      </div>

      {/* Error Display */}
      {error && (
        <div className="bg-red-900 border border-red-700 rounded-lg p-4">
          <p className="text-red-200 text-sm">{error}</p>
          <button
            onClick={() => setError(null)}
            className="text-red-300 hover:text-red-100 text-xs mt-2 underline"
          >
            Dismiss
          </button>
        </div>
      )}

      {/* Tabs */}
      <div className="flex border-b border-gray-700">
        {(['create', 'current', 'recent', 'editor'] as const).map((tab) => (
          <button
            key={tab}
            onClick={() => setActiveTab(tab)}
            disabled={tab === 'editor' && !selectedVideoForEditor}
            className={`px-6 py-3 font-medium transition-colors ${
              activeTab === tab
                ? 'text-white border-b-2 border-blue-600'
                : 'text-gray-400 hover:text-white disabled:opacity-50 disabled:cursor-not-allowed'
            }`}
          >
            {tab.charAt(0).toUpperCase() + tab.slice(1)}
          </button>
        ))}
      </div>

      {/* Tab Content */}
      <div className="mt-6">
        {activeTab === 'create' && (
          <div className="space-y-6">
            {showPromptMaker ? (
              <div>
                <button
                  onClick={() => setShowPromptMaker(false)}
                  className="text-gray-400 hover:text-white mb-4 text-sm"
                >
                  ‚Üê Back to Create
                </button>
                <PromptMaker onUsePrompt={handleUsePrompt} />
              </div>
            ) : (
              <div className="space-y-6">
                <div className="bg-gray-800 rounded-lg p-6 border border-gray-700">
                  <h3 className="text-lg font-bold text-white mb-4">Create New Video</h3>

                  <div className="space-y-4">
                    {/* Title */}
                    <div>
                      <label className="block text-sm font-medium text-gray-300 mb-2">
                        Title (optional)
                      </label>
                      <input
                        type="text"
                        value={title}
                        onChange={(e) => setTitle(e.target.value)}
                        placeholder="My awesome video..."
                        className="w-full px-3 py-2 bg-gray-900 text-white border border-gray-700 rounded focus:outline-none focus:border-blue-500"
                      />
                    </div>

                    {/* Prompt */}
                    <div>
                      <div className="flex justify-between items-center mb-2">
                        <label className="block text-sm font-medium text-gray-300">
                          Video Prompt
                        </label>
                        <button
                          onClick={() => setShowPromptMaker(true)}
                          className="text-blue-400 hover:text-blue-300 text-sm flex items-center gap-1"
                        >
                          <Sparkles className="w-4 h-4" />
                          Use Prompt Maker
                        </button>
                      </div>
                      <textarea
                        value={prompt}
                        onChange={(e) => setPrompt(e.target.value)}
                        placeholder="Describe the video you want to create..."
                        className="w-full px-3 py-2 bg-gray-900 text-white border border-gray-700 rounded focus:outline-none focus:border-blue-500 resize-none"
                        rows={4}
                      />
                    </div>

                    {/* Model Selection */}
                    <div>
                      <label className="block text-sm font-medium text-gray-300 mb-2">Model</label>
                      <div className="flex gap-2">
                        <button
                          onClick={() => setIsPro(false)}
                          className={`flex-1 px-4 py-2 rounded text-sm font-medium transition-all ${
                            !isPro
                              ? 'bg-blue-600 text-white'
                              : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
                          }`}
                        >
                          Sora 2
                        </button>
                        <button
                          onClick={() => setIsPro(true)}
                          className={`flex-1 px-4 py-2 rounded text-sm font-medium transition-all ${
                            isPro
                              ? 'bg-blue-600 text-white'
                              : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
                          }`}
                        >
                          Sora 2 Pro
                        </button>
                      </div>
                    </div>

                    {/* Duration */}
                    <div>
                      <label className="block text-sm font-medium text-gray-300 mb-2">
                        Duration
                      </label>
                      <div className="flex flex-wrap gap-2">
                        {ALLOWED_DURATIONS.map((s) => {
                          const isMultiSegment = s > 12;
                          return (
                            <button
                              key={s}
                              onClick={() => setSeconds(s)}
                              className={`px-4 py-2 rounded text-sm font-medium transition-all ${
                                seconds === s
                                  ? 'bg-blue-600 text-white'
                                  : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
                              } ${isMultiSegment ? 'relative' : ''}`}
                            >
                              {s}s
                              {isMultiSegment && (
                                <span className="ml-1 text-xs opacity-75">
                                  <Film className="inline w-3 h-3" />
                                </span>
                              )}
                            </button>
                          );
                        })}
                      </div>
                      <p className="text-xs text-gray-500 mt-1">
                        <Film className="inline w-3 h-3 mr-1" />
                        Multi-segment stitching (15s/30s/60s)
                      </p>
                    </div>

                    {/* Orientation */}
                    <div>
                      <label className="block text-sm font-medium text-gray-300 mb-2">
                        Orientation
                      </label>
                      <div className="flex gap-2">
                        {[
                          { value: 'vertical', label: 'Vertical (9:16)' },
                          { value: 'horizontal', label: 'Horizontal (16:9)' },
                          { value: 'square', label: 'Square (1:1)' },
                        ].map((o) => (
                          <button
                            key={o.value}
                            onClick={() => setOrientation(o.value)}
                            className={`flex-1 px-4 py-2 rounded text-sm font-medium transition-all ${
                              orientation === o.value
                                ? 'bg-blue-600 text-white'
                                : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
                            }`}
                          >
                            {o.label}
                          </button>
                        ))}
                      </div>
                    </div>

                    {/* Audio URL (optional) */}
                    <div>
                      <label className="block text-sm font-medium text-gray-300 mb-2">
                        Audio URL (optional)
                      </label>
                      <input
                        type="url"
                        value={audioUrl}
                        onChange={(e) => setAudioUrl(e.target.value)}
                        placeholder="https://..."
                        className="w-full px-3 py-2 bg-gray-900 text-white border border-gray-700 rounded focus:outline-none focus:border-blue-500"
                      />
                    </div>

                    {/* Show Lyrics Toggle */}
                    <div className="flex items-center gap-2">
                      <input
                        type="checkbox"
                        id="showLyrics"
                        checked={showLyrics}
                        onChange={(e) => setShowLyrics(e.target.checked)}
                        className="w-4 h-4 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500"
                      />
                      <label htmlFor="showLyrics" className="text-sm text-gray-300">
                        Show lyrics on video
                      </label>
                    </div>

                    {/* Create Button */}
                    <button
                      onClick={handleCreate}
                      disabled={creating || !prompt.trim()}
                      className="w-full bg-blue-600 hover:bg-blue-700 disabled:bg-gray-700 disabled:text-gray-500 text-white font-bold py-3 px-6 rounded-lg transition-colors flex items-center justify-center gap-2"
                    >
                      {creating ? (
                        <>
                          <Loader2 className="w-5 h-5 animate-spin" />
                          Creating...
                        </>
                      ) : (
                        <>
                          <Video className="w-5 h-5" />
                          Create Video
                        </>
                      )}
                    </button>
                  </div>
                </div>
              </div>
            )}
          </div>
        )}

        {activeTab === 'current' && (
          <div>
            {currentVideo ? (
              <div className="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
                <div className="p-6">
                  <div className="flex items-start justify-between mb-4">
                    <div>
                      <h3 className="text-xl font-bold text-white mb-2">
                        {currentVideo.title || 'Current Video'}
                      </h3>
                      <div className="flex items-center gap-2">
                        {renderStatusBadge(currentVideo.status)}
                        {currentVideo.progress !== null && currentVideo.status === 'processing' && (
                          <span className="text-xs text-gray-400">{currentVideo.progress}%</span>
                        )}
                      </div>
                    </div>
                    <button
                      onClick={handleRefreshStatus}
                      className="text-gray-400 hover:text-white transition-colors"
                      title="Refresh status"
                    >
                      <RefreshCw className="w-5 h-5" />
                    </button>
                  </div>

                  <div className="space-y-3 text-sm">
                    <div>
                      <span className="text-gray-400">Model:</span>{' '}
                      <span className="text-white">{currentVideo.model}</span>
                    </div>
                    <div>
                      <span className="text-gray-400">Duration:</span>{' '}
                      <span className="text-white">{currentVideo.seconds}s</span>
                    </div>
                    <div>
                      <span className="text-gray-400">Size:</span>{' '}
                      <span className="text-white">{currentVideo.size}</span>
                    </div>
                    <div>
                      <span className="text-gray-400">Prompt:</span>{' '}
                      <p className="text-white mt-1">{currentVideo.prompt}</p>
                    </div>

                    {currentVideo.error_message && (
                      <div className="bg-red-900 border border-red-700 rounded p-3 mt-3">
                        <p className="text-red-200 text-xs">{currentVideo.error_message}</p>
                      </div>
                    )}

                    {currentVideo.output_video_url && (
                      <div className="mt-4">
                        <video
                          src={currentVideo.output_video_url}
                          controls
                          className="w-full rounded"
                        />
                        <div className="flex gap-2 mt-3">
                          <button
                            onClick={() => {
                              setSelectedVideoForEditor(currentVideo);
                              setActiveTab('editor');
                            }}
                            className="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded text-sm transition-colors"
                          >
                            Open in Editor
                          </button>
                          <a
                            href={currentVideo.output_video_url}
                            target="_blank"
                            rel="noopener noreferrer"
                            className="flex-1 bg-gray-700 hover:bg-gray-600 text-white py-2 px-4 rounded text-sm text-center transition-colors"
                          >
                            Download
                          </a>
                        </div>
                      </div>
                    )}

                    {currentVideo.status === 'queued' && (
                      <p className="text-gray-400 text-xs mt-4">
                        Your video is queued. It will start processing shortly. This page will update automatically.
                      </p>
                    )}

                    {currentVideo.status === 'processing' && (
                      <p className="text-gray-400 text-xs mt-4">
                        Your video is being generated. This can take a few minutes. This page will update automatically.
                      </p>
                    )}
                  </div>
                </div>
              </div>
            ) : (
              <div className="bg-gray-800 rounded-lg border border-gray-700 p-12 text-center">
                <Video className="w-16 h-16 text-gray-600 mx-auto mb-4" />
                <p className="text-gray-400">No current video</p>
                <p className="text-gray-500 text-sm mt-2">
                  Create a video to see it here
                </p>
                <button
                  onClick={handleRefreshStatus}
                  className="mt-4 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded-lg transition-colors"
                >
                  Check for Syncing Videos
                </button>
              </div>
            )}
          </div>
        )}

        {activeTab === 'recent' && (
          <div className="space-y-4">
            {recentVideos.length === 0 ? (
              <div className="bg-gray-800 rounded-lg border border-gray-700 p-12 text-center">
                <Video className="w-16 h-16 text-gray-600 mx-auto mb-4" />
                <p className="text-gray-400">No recent videos</p>
                <p className="text-gray-500 text-sm mt-2">
                  Completed videos will appear here
                </p>
              </div>
            ) : (
              recentVideos.map((video) => (
                <div
                  key={video.id}
                  className="bg-gray-800 rounded-lg border border-gray-700 p-4 hover:border-gray-600 transition-colors cursor-pointer"
                  onClick={() => {
                    setCurrentVideo(video);
                    setActiveTab('current');
                    localStorage.setItem(STORAGE_KEY, video.id);
                  }}
                >
                  <div className="flex items-start justify-between">
                    <div className="flex-1">
                      <h4 className="text-white font-medium mb-1">
                        {video.title || 'Untitled Video'}
                      </h4>
                      <p className="text-gray-400 text-xs mb-2 line-clamp-2">{video.prompt}</p>
                      <div className="flex items-center gap-2 text-xs">
                        {renderStatusBadge(video.status)}
                        <span className="text-gray-500">{video.seconds}s</span>
                        <span className="text-gray-500">{video.size}</span>
                        <span className="text-gray-500">
                          {new Date(video.created_at).toLocaleDateString()}
                        </span>
                      </div>
                    </div>
                    {video.output_video_url && (
                      <button
                        onClick={(e) => {
                          e.stopPropagation();
                          setSelectedVideoForEditor(video);
                          setActiveTab('editor');
                        }}
                        className="text-blue-400 hover:text-blue-300 transition-colors"
                      >
                        <Play className="w-5 h-5" />
                      </button>
                    )}
                  </div>
                </div>
              ))
            )}
          </div>
        )}

        {activeTab === 'editor' && (
          <div className="relative z-20 pointer-events-auto">
            {selectedVideoForEditor && selectedVideoForEditor.output_video_url ? (
              <div className="relative z-20 pointer-events-auto">
                <VideoEditor
                  videoId={selectedVideoForEditor.id}
                  videoUrl={selectedVideoForEditor.output_video_url}
                  onClose={() => {
                    setSelectedVideoForEditor(null);
                    setActiveTab('recent');
                  }}
                />
              </div>
            ) : (
              <div className="bg-gray-800 rounded-lg border border-gray-700 p-12 text-center">
                <Video className="w-16 h-16 text-gray-600 mx-auto mb-4" />
                <p className="text-gray-400">No video selected for editing</p>
                <p className="text-gray-500 text-sm mt-2">
                  Select a completed video from the Recent tab
                </p>
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}
